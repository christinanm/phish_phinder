<?xml version = "1.0" encoding = "UTF-8"?>
<OfficeApp xmlns = "http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type = "MailApp">
  <Id>b3a9d2c1-5f6e-4a2b-9c3d-1e2f3a4b5c6d</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Cy's Computers</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue = "Phish Phinder"/>
  <Description DefaultValue = "A light-weight Outlook add-in that detects phishing/spam emails."/>
  <IconUrl DefaultValue = "https://localhost:3000/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue = "https://localhost:3000/assets/icon-80.png"/>
  <SupportUrl DefaultValue = "https://localhost:3000/help"/>

  <Requirements>
    <Sets DefaultMinVersion = "1.12">
      <Set Name = "Mailbox"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type = "ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue = "https://localhost:3000/taskpane.html"/>
        <RequestedHeight>350</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>

  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides"
                    xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
                    xsi:type="VersionOverridesV1_0">

    <Requirements>
      <bt:Sets DefaultMinVersion="1.12">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="grpPhishCheck">
                <Label resid="grpPhishCheck.Label"/>
                <Control xsi:type="Button" id="btnPhishCheck">
                  <Label resid="btnPhishCheck.Label"/>
                  <Supertip>
                    <Title resid="btnPhishCheck.Label"/>
                    <Description resid="btnPhishCheck.Desc"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon16"/>
                    <bt:Image size="32" resid="icon32"/>
                    <bt:Image size="80" resid="icon80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="TaskPane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="icon16" DefaultValue="https://localhost:3000/assets/icon-16.png"/>
        <bt:Image id="icon32" DefaultValue="https://localhost:3000/assets/icon-32.png"/>
        <bt:Image id="icon80" DefaultValue="https://localhost:3000/assets/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="TaskPane.Url" DefaultValue="https://localhost:3000/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
  <bt:String id="grpPhishCheck.Label" DefaultValue="Security"/>
  <bt:String id="btnPhishCheck.Label" DefaultValue="Phish Phinder"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="btnPhishCheck.Desc" DefaultValue="Analyze this email for phishing/spam signals."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
